@{
  Layout = "_Layout";
}

@using PierresShoppe.Models;
@model List<PierresShoppe.Models.Flavor>;
<h1>Current Flavor Profiles</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <h3>No flavors have been added yet!</h3>
    } 
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>

    @if (User.Identity.IsAuthenticated)
    {
      @Html.ActionLink(" Add New Flavor", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
    }
  </div>
</div>