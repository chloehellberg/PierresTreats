@{
  Layout = "_Layout";
}

@using PierresShoppe.Models;
@model List<PierresShoppe.Models.Treat>;

<h1>Current Treats Offered</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <h3>No treats have been added yet!</h3>
    } 
    <ul>
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
      }
    </ul>
   
    @if (User.Identity.IsAuthenticated)
    {
      @Html.ActionLink(" Add New Treat", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
    }
  </div>  
</div>